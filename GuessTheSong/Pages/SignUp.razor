@page "/sign-up"
@inject NavigationManager Navigation
<PageTitle>Sign Up</PageTitle>
    <main class="page">
        <h2>Sign Up</h2>
        <h3>Please enter new sign up details</h3>
        <div class="login-section" >

        <label for="user-name">Enter your username: </label>
        <input id="user-name" class="input" name="user-name" type="text" @bind="@username" required />

            <label for="new-password">Enter your password: </label>
        <input id="new-password" class="input" name="new-password" type="password" @bind="@password" required />

        </div>

        <button class="button" @onclick="signUpClick">Register</button>
        <button class="button" onClick="history.go(-1);">back</button>
    
        <GuessTheSong.components.PopupMessage errorMessage="@errorMessage" isDisplayingMessage="@displayError"></GuessTheSong.components.PopupMessage>
    </main>
